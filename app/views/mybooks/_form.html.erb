<%= form_with(model: mybook) do |form| %>
  <% if mybook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mybook.errors.count, "error") %> prohibited this mybook from being saved:</h2>

      <ul>
        <% mybook.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :year, class:"form-control", placeholder:"Book Edition" %>
  </div>

  <div class="form-group">
    <%= form.text_field :price, class:"form-control", placeholder:"Price" %>
  </div>

  <div class="form-group">
    <%= form.number_field :user_id, id: :mybook_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    
  </div>

 

  <div class="form-group">
     <%= form.file_field :image, class:"form-control" %> 
  </div>





  <div class="form-group">
    <%= form.label :Semester %>
    <div class="controls">
      <%= form.select(:semester, options_for_select([['Sem 1','Sem 1'],['Sem 2','Sem 2'],['Sem 3','Sem 3'],['Sem 4','Sem 4'],['Sem 5','Sem 5'],['Sem 6','Sem 6'],['Sem 7','Sem 7'],['Sem 8','Sem 8']])) %>
    </div>
  </div>

  <div class="form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :instagram, class:"form-control", placeholder:"Instagram" %>
  </div>      
   

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
